<Page
    x:Class="ErrorsApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ErrorsApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="accidErrGrid" RequestedTheme="Default" Background="Black">
        <TextBox x:Name="NumOfValuesEntering" HorizontalAlignment="Left" Margin="10,100,0,0" Text="" TextWrapping="NoWrap" VerticalAlignment="Top" Height="50" Width="150" RequestedTheme="Default" FontSize="24" InputScope="Number" KeyUp="NumOfValEnt_KeyUp" KeyDown="NumOfValEnt_KeyDown" TextAlignment="Center"/>
        <TextBlock x:Name="EnterNumberBlock" HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="250" FocusVisualSecondaryBrush="#99FFFFFF" FocusVisualPrimaryBrush="White" SelectionHighlightColor="White" RequestedTheme="Light" Foreground="White" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" FontSize="24" Text="Enter number of values:&#xD;&#xA;">
            <TextBlock.RenderTransform>
                <CompositeTransform SkewY="0.232" TranslateY="0.584"/>
            </TextBlock.RenderTransform></TextBlock>
        <TextBlock x:Name="ResultsOutput" HorizontalAlignment="Right" Margin="0,100,50,0" Text="" TextWrapping="Wrap" Width="400" Style="{StaticResource BodyTextBlockStyle}" Foreground="White" FocusVisualPrimaryBrush="Red" FocusVisualSecondaryBrush="#99FF0000" RequestedTheme="Default" FontSize="24" Height="200" VerticalAlignment="Top" IsTextSelectionEnabled="True"/>
        <TextBlock x:Name="EnterValuesBlock" HorizontalAlignment="Left" Margin="10,150,0,0" Text="Enter your values:" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="200" FontSize="24" Visibility="Collapsed"/>
        <Button x:Name="MenuButton" Content="Menu" Margin="10,10,0,0" VerticalAlignment="Top" Height="40" Width="75" FontSize="18" Click="Menu_Click"/>
        <Button x:Name="RestartButton" Content="Restart" Margin="90,10,0,0" VerticalAlignment="Top" Height="40" Width="75" FontSize="18" Click="Restart_Click"/>
        <TextBox x:Name="maxRowsEntering" HorizontalAlignment="Left" Margin="350,50,0,0" Text="" TextWrapping="NoWrap" VerticalAlignment="Top" Header="Maximal number of rows in coloumn" PlaceholderText="" FontSize="24" Width="250" Height="110" KeyUp="maxRowsEntering_KeyUp"/>
        <ScrollViewer x:Name="summaryErrorScroll" Background="Black" Visibility="Visible">
            <Grid x:Name="summaryErrorGrid" Height="718" Width="1279">
                <Button x:Name="MenuButton_SummEr" Content="Menu" Margin="10,5,0,0" VerticalAlignment="Top" Height="40" Width="75" FontSize="18" Click="Menu_Click"/>
                <TextBlock x:Name="EnterNumberBlock_SummEr" HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="200" FocusVisualSecondaryBrush="#99FFFFFF" FocusVisualPrimaryBrush="White" SelectionHighlightColor="White" RequestedTheme="Light" Foreground="White" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" FontSize="24" Text="Number of values:&#xA;">
                    <TextBlock.RenderTransform>
                        <CompositeTransform SkewY="0.232" TranslateY="0.584"/>
                    </TextBlock.RenderTransform></TextBlock>
                <TextBox x:Name="NumOfValuesEntering_SummEr" HorizontalAlignment="Left" Margin="50,115,0,0" Text="" TextWrapping="NoWrap" VerticalAlignment="Top" Height="50" Width="100" RequestedTheme="Default" FontSize="24" InputScope="Number" KeyUp="NumOfValEntSummEr_KeyUp" KeyDown="NumOfValEntSummEr_KeyDown" TextAlignment="Center"/>
                <TextBox x:Name="maxRowsEntering_SummEr" HorizontalAlignment="Right" Margin="0,45,91,0" Text="" TextWrapping="NoWrap" VerticalAlignment="Top" Header="Maximal number of rows in coloumn" PlaceholderText="" FontSize="24" Width="250" Height="120" KeyUp="maxRowsEntering_KeyUp" TextAlignment="Center"/>
                <TextBlock x:Name="EnterValuesBlock_SummEr" HorizontalAlignment="Left" Margin="10,165,0,0" Text="Enter your values:" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="200" FontSize="24" Visibility="Collapsed"/>
                <TextBox x:Name="confProbEntering" HorizontalAlignment="Left" Margin="250,115,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="50" Header="" FontSize="24" TextAlignment="Center" KeyUp="confProb_KeyUp"/>
                <TextBox x:Name="marginErrorEntering" HorizontalAlignment="Left" Margin="450,115,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" TextAlignment="Center" Header="" Height="50" Width="100" KeyUp="marginError_KeyUp"/>
                <TextBlock HorizontalAlignment="Left" Margin="420,45,0,0" Text="Margin of error:" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="50" FontSize="24" TextAlignment="Center"/>
                <TextBlock HorizontalAlignment="Left" Margin="240,45,0,0" Text="Confidence probability:" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="70" FontSize="24"/>
                <TextBox x:Name="roundingIntEntering" HorizontalAlignment="Left" Margin="650,115,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" KeyUp="roundingInt_KeyUp" TextAlignment="Center"/>
                <TextBlock HorizontalAlignment="Left" Margin="620,45,0,0" Text="Rounding interval:" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Height="50" FontSize="24" TextAlignment="Center"/>
                <TextBlock x:Name="summaryErrorOutput" HorizontalAlignment="Right" Margin="0,0,20,0" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="250" Height="200" IsTextSelectionEnabled="True" FontSize="24"/>
                <TextBlock x:Name="errOfInstOutput" HorizontalAlignment="Left" Margin="700,200,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="100"/>
                <TextBlock x:Name="errOfRoundingOutput" HorizontalAlignment="Left" Margin="700,300,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="100"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
